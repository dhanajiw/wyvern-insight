</h6><h6>
    <div class="starter-template row well col-sm-10">
 <div class="table-responsive">
<table id="table-cluster" class="display">
 <thead>
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>UnitPrice</th>
        <th>BaseUnits</th>
        
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>UnitPrice</th>
        <th>BaseUnits</th>
        
        <td></td>
    </tr>
    </tfoot>
    <tbody>
    
    <% if (data) { %>
    <% data.forEach(function(user){ %>
        <tr>
            <td><%= user.cod_product %></td>
            <td><%= user.txt_product_name %></td>
            <td><%= user.cod_base_unit_type %></td>
            <td align="right"><%= user.num_base_units_multiples %></td>
            
            
            <td align="center" style="width: 100px;">
                 <div class="btn-group" role="group" aria-label="...">
            <form method="post" action="/products/delete/<%= user.cod_product %>" style="float:right">

                 <a href='/products/editProduct/<%= user.cod_product %>'><button type="button" class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i></button></a>

                 <button type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete ' +<%= user.cod_product %>)" class="btn btn-danger"><i class="glyphicon glyphicon-trash">
                 </i></button></a>
                 <input type="hidden" name="_method" value="DELETE" />


                 </form>
                </div>
            </td>
        </tr>
    <% }) %>
    <% } %>
 </tbody>
</table>
 </div>
 </div>
 </div>
