    <h6>
<% if (messages.error) { %>
    <h5 style="color:red" ><%- messages.error %></h5>
<% } %>
 
<% if (messages.success) { %>
    <h5 style="color:green"><%- messages.success %></h5>
<% } %>
</h6><h6>
    <div class="starter-template row well col-sm-10">
 <div class="table-responsive">
<table id="table-cluster" class="display">
 <thead>
    <tr>
        <th>Code</th>
        <th>Slab&nbsp;No.</th>
        <th>Min&nbsp;Units</th>
        <th>Max&nbsp;Units</th>
        <th>UnitPrice&nbsp;Standard</th>
        <th>UnitPrice&nbsp;Incremental</th>
        
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>Code</th>
        <th>Slab&nbsp;No.</th>
        <th>Min&nbsp;Units</th>
        <th>Max&nbsp;Units</th>
        <th>UnitPrice&nbsp;Standard</th>
        <th>UnitPrice&nbsp;Incremental</th>
        
        <td></td>
    </tr>
    </tfoot>
    <tbody>
    
    <% if (data) { %>
    <% data.forEach(function(user){ %>
        <tr>
            <td><%= user.cod_product %></td>
            <td align="right"><%= user.num_slab %></td>
            <td align="right"><%= user.num_slab_min_units %></td>
            <td align="right"><%= user.num_slab_max_units %></td>
            <td><%= user.amt_unit_price_standard %></td>
            <td><%= user.amt_unit_price_incremental %></td>
            
            
            <td align="center" style="width: 100px;">
                 <div class="btn-group" role="group" aria-label="...">
            <form method="post" action="/productSlabs/delete/<%= user.cod_product %>" style="float:right">

                 <a href='/productSlabs/editProductSlab/<%= user.cod_product %>'><button type="button" class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i></button></a>

                 <button type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete ' +<%= user.cod_product %>)" class="btn btn-danger"><i class="glyphicon glyphicon-trash">
                 </i></button></a>
                 <input type="hidden" name="_method" value="DELETE" />


                 </form>
                </div>
            </td>
        </tr>
    <% }) %>
    <% } %>
 </tbody>
</table>
 </div>
 </div>
 </div>
