    <h5 style="color:green"><%- messages.success %></h5>
<% } %>
</h6><h6>
    <div class="starter-template row well col-sm-10" >
 <div class="table-responsive">
<table id="table-cluster" class="display">
 <thead>
    <tr>
        <th>Code</th>
        <th>Name</th>
		<th>Pilot</th>
		<th>Aircraft</th>
		<th>Insurance</th>
		<th>Operator</th>
		<th>Attach&nbsp;Documents&nbsp;Required</th>
		
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>Code</th>
        <th>Name</th>
		<th>Pilot</th>
		<th>Aircraft</th>
		<th>Insurance</th>
		<th>Operator</th>
		<th>Attach&nbsp;Documents&nbsp;Required</th>
        
        <td></td>
    </tr>
    </tfoot>
    <tbody>
    
    <% if (data) { %>
    <% data.forEach(function(user){ %>
        <tr>
            <td><%= user.cod_waiver %></td>
            <td><%= user.txt_waiver_name %></td> 

            <% if (user.flg_waiver_for_pilot == 1) { %>
            <td><input id="opt1" type="checkbox" name="check1" disabled checked /></td>
            <% } else { %>
            <td><input id="opt2" type="checkbox" name="check2" disabled  /></td>
            <% } %>

            <% if (user.flg_waiver_for_aircraft == 1) { %>
            <td><input id="opt3" type="checkbox" name="check3" disabled checked /></td>
            <% } else { %>
            <td><input id="opt4" type="checkbox" name="check4" disabled  /></td>
            <% } %>

            <% if (user.flg_waiver_for_insurance == 1) { %>
            <td><input id="opt5" type="checkbox" name="check5" disabled checked /></td>
            <% } else { %>
            <td><input id="opt6" type="checkbox" name="check6" disabled  /></td>
            <% } %>

            <% if (user.flg_waiver_for_operator == 1) { %>
            <td><input id="opt7" type="checkbox" name="check7" disabled checked /></td>
            <% } else { %>
            <td><input id="opt8" type="checkbox" name="check8" disabled  /></td>
            <% } %>

            <% if (user.flg_doc_upload_mandatory == 1) { %>
            <td><input id="opt9" type="checkbox" name="check9" disabled checked /></td>
            <% } else { %>
            <td><input id="opt10" type="checkbox" name="check10" disabled  /></td>
            <% } %>
			
            <td align="center" style="width: 100px;">
                 <div class="btn-group" role="group" aria-label="...">
            <form method="post" action="/waivers/delete/<%= user.cod_waiver %>" style="float:right">

                 <a href='/waivers/editWaiver/<%= user.cod_waiver %>'><button type="button" class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i></button></a>

                 <button type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete ' +<%= user.cod_waiver %>)" class="btn btn-danger"><i class="glyphicon glyphicon-trash">
                 </i></button></a>
                 <input type="hidden" name="_method" value="DELETE" />

                 </form>
                </div>
            </td>
        </tr>
    <% }) %>
    <% } %>
 </tbody>
</table>
</div>
</div>
</div>
