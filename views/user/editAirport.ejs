<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>    
        
<h6>
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<h3><%= title %><hr></h3>
<div class="container">
<form action="/airports/editAirport/<%= id_airport %>" method="post" name="form1">
    <table>	 
		<tr>
            <td>ID &nbsp;</td>
            <td><input type="text" name="id_airport" value="<%= id_airport %>" disabled="disabled"/></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>ICAO Code &nbsp;</td>
            <td><input type="text" name="cod_icao" value="<%= cod_icao %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Logical ICAO &nbsp;</td>
            <td><input type="text" name="cod_logicalICAO" value="<%= cod_logicalICAO %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>IATA &nbsp;</td>
            <td><input type="text" name="cod_iata" value="<%= cod_iata %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>FAA &nbsp;</td>
            <td><input type="text" name="cod_faa" value="<%= cod_faa %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Name &nbsp;</td>
            <td><input type="text" name="txt_name" value="<%= txt_name %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Active &nbsp;</td>
            <td><input type="text" name="flg_active" value="<%= flg_active %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Region &nbsp;</td>
            <td><select class="selectpicker" data-style="btn-info" name="cod_operation_region">
                    <% data1.forEach(function(user){ %>
                        <option value="<%= user.txt_region_name %>">
                            <%= user.txt_region_name %>
                        </option>
                    <% }) %>
                </select>
            </td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
            <td>City &nbsp;</td>
            <td><select class="selectpicker" data-style="btn-info" name="cod_city">
                    <% data2.forEach(function(user){ %>
                        <option value="<%= user.txt_city_name %>">
                            <%= user.txt_city_name %>
                        </option>
                    <% }) %>
                </select>
            </td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr> 
            <td>State &nbsp;</td>
            <td><select class="selectpicker" data-style="btn-info" name="cod_state">
                    <% data3.forEach(function(user){ %>
                        <option value="<%= user.txt_state_name %>">
                            <%= user.txt_state_name %>
                        </option>
                    <% }) %>
                </select>
            </td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr> 
            <td>Country &nbsp;</td>
            <td><select class="selectpicker" data-style="btn-info" name="cod_country">
                    <% data4.forEach(function(user){ %>
                        <option value="<%= user.txt_country_name %>">
                            <%= user.txt_country_name %>
                        </option>
                    <% }) %>
                </select>
            </td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
            <td>Timezone &nbsp;</td>
            <td>
                <select class="selectpicker" data-style="btn-info" name="cod_timezone">
                    <% data5.forEach(function(user){ %>
                        <option value="<%= user.txt_timezone_name %>">
                            <%= user.txt_timezone_name %>
                        </option>
                    <% }) %>
                </select>
            </td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Longitude</td>
            <td><input type="text" name="num_longitude" value="<%= num_longitude %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Latitude &nbsp;</td>
            <td><input type="text" name="num_latitude" value="<%= num_latitude %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Elevation Feet &nbsp;</td>
            <td><input type="text" name="num_elevation_feet" value="<%= num_elevation_feet %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Runways &nbsp;</td>
            <td><input type="text" name="num_runways" value="<%= num_runways %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Shortest Runway &nbsp;</td>
            <td><input type="text" name="num_shortest_runway_feet" value="<%= num_shortest_runway_feet %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr>
            <td>Longest Runway &nbsp;</td>
            <td><input type="text" name="num_longest_runway_feet" value="<%= num_longest_runway_feet %>" /></td>
        </tr>
		<tr><td>&nbsp;&nbsp;</td></tr>
		<tr> 
            <td></td>
            <td><input type="submit" name="Submit" value="Add" /></td>
        </tr>
            <input type="hidden" name="_method" value="PUT" />
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
        <td>
            <% if (messages.success) { %>
            <p style="color:green"><%- messages.success %></p>
            <% } %>
        </td>
        </tr>
    </table>
</form>
</div>
</h6>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>