<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<h6>
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<h3><%= title %><hr></h3>
<div class="container">
<form action="/countries/addCountry" method="post" name="form1">
    <table>
        <tr>
            <td>Code &nbsp;</td>
            <td><input type="text" name="cod_country" value="<%= cod_country %>" /></td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
            <td>Alternate Code &nbsp;</td>
            <td><input type="text" name="cod_country_alternative" value="<%= cod_country_alternative %>" /></td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
            <td>Name &nbsp;</td>
            <td><input type="text" name="txt_country_name" value="<%= txt_country_name %>" /></td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
            <td>Time Zone &nbsp;</td>
            <td><select class="selectpicker" data-style="btn-info" name="cod_timezone">
                        <% data.forEach(function(user){ %>
                            <option value="<%= user.txt_timezone_name %>">
                                <%= user.txt_timezone_name %>
                            </option>
                        <% }) %>
                </select>
            </td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Add" /></td>
        </tr>
        <tr><td>&nbsp;&nbsp;</td></tr>
        <tr>
        <td>
            <% if (messages.success) { %>
            <p style="color:green"><%- messages.success %></p>
            <% } %>
        </td>
        </tr>
    </table>
</form>
</div>
</h6> 

